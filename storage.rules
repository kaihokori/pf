service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload and manage files under their
    // own profile_images folder only (e.g. profile_images/{uid}/avatar.jpg).
    match /profile_images/{userId}/{allPaths=**} {
      // Owner may write to their folder.
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow reads to authenticated users; change to `if true;` to make public.
      allow read: if request.auth != null;
    }

    // Legacy: logs folder used by app for debug capture (wide-open by design).
    match /logs/{userId}/{allPaths=**} {
      allow read, write: if true;
    }

    // Allow authenticated users to upload into their own collect folder.
    match /collect/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
